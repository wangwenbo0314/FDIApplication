<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/shipan"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <TextView
                android:id="@+id/fdi_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="FDI"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <LinearLayout
                android:id="@+id/main_group"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/reg_shipan_but"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="实盘"
                        android:textColor="#3683D7" />

                    <View
                        android:id="@+id/reg_shipan_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.03"
                        android:background="#3683D7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/reg_moni_but"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:text="模拟"
                        android:textColor="#ffffff" />

                    <View
                        android:id="@+id/reg_moni_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.03"
                        android:background="#3683D7"
                        android:visibility="invisible" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/ic_launcher" />

                <EditText
                    android:id="@+id/reg_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textColorHint="#ffffff" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#818488" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">
            <Button
                android:id="@+id/reg_next_but"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/psdbut"
                android:text="下一步"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>

</layout>
